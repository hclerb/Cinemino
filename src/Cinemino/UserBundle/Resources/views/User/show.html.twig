
{% extends "CineminoUserBundle::userlayout.html.twig" %}

{% block title %}
{{ parent() }} -  Utilisateurs
{% endblock %}

{% block alert %}Ici vous pouvez g√©rer l'ensemble des utilisateurs.
{% endblock %}



{% block formulaire %}
<body onLoad="scrolldown();"> 
    
<div class="well" style="width:400px">
<div class="page-header"><h3>Compte-rendu compte : {{ entity.username }}</h3></div>   
<table class="record_properties">
    <tbody>
        <tr>
            <th>Username</th>
            <td>{{ entity.username }}</td>
        </tr>
        <tr>
            <th>Usernamecanonical</th>
            <td>{{ entity.usernameCanonical }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Emailcanonical</th>
            <td>{{ entity.emailCanonical }}</td>
        </tr>
        <tr>
            <th>Enabled</th>
            <td>{{ entity.enabled }}</td>
        </tr>
        <tr>
            <th>Lastlogin</th>
            <td>{{ entity.lastLogin|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Locked</th>
            <td>{{ entity.locked }}</td>
        </tr>
        <tr>
            <th>Expired</th>
            <td>{{ entity.expired }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ entity.roles[0] }}</td>
        </tr>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
    </tbody>
</table>


        <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Supprimer le compte {{ entity.username }}</button><i class="icon-remove icon-white"></i>
        </form>
 
</div>
{% endblock formulaire %}

