     {{ form_errors(form.file) }}
     {{ form_widget(form.file, { 'attr': {'style': 'padding:10px;'} }) }}
    <img src="{{asset('medias/Film/affiches/big/')}}{{entity.affiche }}" width="151px"/>
  </div>
   <div class="span3">
     {{ form_label(form.filet) }}
     {{ form_errors(form.totem) }}
     {{ form_widget(form.totem, { 'attr': {'style': 'width:300px;'} }) }}
     {{ form_errors(form.filet) }}
     {{ form_widget(form.filet, { 'attr': {'style': 'padding:10px;'} }) }}
    <img src="{{asset('medias/Film/totems/brut/')}}{{ entity.totem }}" width="151px"/>
  </div>  
</div>
     
<div class="row">     

</div>
    
<div class="row">
  <div class="span12">     
    {{ form_label(form.synopsys) }}
    {{ form_errors(form.synopsys) }}
    {{ form_widget(form.synopsys, { 'attr': {'style': 'height:300px;'} }) }}
  </div> 
 </div>
<br/>    
 <div class="row">
  <div class="span12"> 
    {{ form_label(form.critique) }}
    {{ form_errors(form.critique) }}
    {{ form_widget(form.critique, { 'attr': {'style': 'height:300px'} }) }}
