    {{ form_errors(form.couleurTexte) }}
    {{ form_widget(form.couleurTexte, { 'attr': {'class': 'color', 'value': entity.couleurTexte} }) }}
  </div>
  <div class="span3">
    {{ form_label(form.couleurFondFilm) }}
    {{ form_errors(form.couleurFondFilm) }}
    {{ form_widget(form.couleurFondFilm, { 'attr': {'class': 'color', 'value': entity.couleurFondFilm}} ) }}
  </div>
  <div class="span2">
    {{ form_label(form.animation) }}
    {{ form_errors(form.animation) }}
    {{ form_widget(form.animation) }}
  </div>
  <div class="span3">
    {{ form_label(form.typeAnimation) }}
    {{ form_errors(form.typeAnimation) }}
    {{ form_widget(form.typeAnimation) }}
  </div>
 </div>   
<div id="ajout_media">
  <h5>Médias associés</h5>
  <div id="list_medias"> 
      {% for key, item in form.idMedias %}
          {{ _self.prototype(item) }}
      {% endfor %}
      {% macro prototype(item) %}
        <div class="themedia">
           <div class="row inthemedia">
            <div class="span6">
             {{ form_label(item.titre) }}
             {{ form_errors(item.titre) }}
             {{ form_widget(item.titre, { 'attr': {'style': 'width:570px;'} }) }}
            </div>
            <div class="span2">
             {{ form_label(item.type) }}
             {{ form_errors(item.type) }}
             {{ form_widget(item.type, { 'attr': {'style': 'width:110px;'} }) }}
            </div> 
            <div class="offset1 span1">
              <br/>
              <a  class="btn btn-danger" href="#supp_media" rel="parametre">Supprimer</a>
            </div>
           </div>
           <div class="row inthemedia">           
            <div class="span4">
             {{ form_label(item.url) }}
             {{ form_errors(item.url) }}
             {{ form_widget(item.url, { 'attr': {'style': 'width:370px;'} }) }}
            </div>
            <div class="offset1 span5">
             {{ form_label(item.file) }}
             {{ form_errors(item.file) }}
             {{ form_widget(item.file, { 'attr': {'style': 'marging-left:30px;'} }) }}
            </div>
            </div>
         </div>
       <br/>
     {% endmacro %}
     <script type="text/html">
       {{ _self.prototype(form.idMedias.vars.prototype) }} 
     </script>
 </div>
 <div class="row">  
  <div class="span12">
    <a class="btn btn-info" href="#add_media" id="add_media"><i class="icon-white icon-plus"></i> Ajouter un média</a>
  </div>
 </div>
 <br/>
</div>
<br/>
{{ form_rest(form) }}
<div class="row">
  <div class="span5">
      <button class="btn btn-primary" type="submit">Valider l'enregistrement du film</button>
      <a class="btn" href="{{ path('film') }}"><i class="icon-arrow-left"></i> Revenir à la liste des films</a>
  </div>
</div>
</form>
 <br/>     
 <form action="{{ path('film_delete', { 'id': entity.id }) }}" method="post" >
            {{ form_widget(delete_form) }}
           <button class="btn btn-danger" type="submit"><i class="icon-remove icon-white"></i> Supprimer le film</button>
 </form>
</div>

<script type="text/javascript">
    $(document).ready(function() {
 
    // On définit une fonction qui va ajouter un champ.
    function add_media() {
        var $container = $('.themedia');
        var index = $container.length;
	var newForm = $('script[type="text/html"]').text().replace(/__name__/g, index);

	$("div#list_medias").append(newForm);

              
    }

    // On ajoute un premier champ directement s'il n'en existe pas déjà un.
 
 
    // On ajoute un nouveau champ à chaque clic sur le lien d'ajout.
    $('#add_media').click(function() {
        add_media();
    });
    
        $("div#list_medias").on("click","a[rel='parametre']", function(){ 
          if (confirm('Voulez vous réellement supprimer ce média ?')) {
            $(this).parents("div.themedia").remove();
          }
        	
        });

 $("#idfilms").addClass("active");

});

</script>


{% endblock content %}