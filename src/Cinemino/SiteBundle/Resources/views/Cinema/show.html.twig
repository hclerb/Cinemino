
{% extends "CineminoSiteBundle::layout.html.twig" %}

{% block content %}

  <td> <img class="img-polaroid" src="{{asset('medias/Cinema/photo/big/')}}{{ entity.photo }}" alt=""/></td>
  <td> <img class="img-polaroid" src="{{asset('medias/Cinema/logo/big/')}}{{ entity.logo }}" alt=""/></td>
<br><br>
<table class="record_properties">
    <tbody>
    
        <tr>
            <th>Adresse :</th>
            <td>{{ entity.adresse }}</td>
        </tr>
        <tr>
            <th>Longitude :</th>
            <td>{{ entity.longitude }}</td>
        </tr>
        <tr>
            <th>Latitude :</th>
            <td>{{ entity.latitude }}</td>
        </tr>
        <tr>
            <th>Adresse mail :</th>
            <td>{{ entity.adresseMail }}</td>
        </tr>
        <tr>
            <th>Coordonnees tel :</th>
            <td>{{ entity.coordonneesTel }}</td>
        </tr>
        <tr>
            <th>Site web :</th>
            <td>{{ entity.siteWeb }}</td>
        </tr>
        <tr>
            <th>Couleur de fond :</th>
            <td style="background-color:#{{ entity.couleurFondCinema }}"></td>
        </tr>
        <tr>
            <th>Salle :</th>
            <td>{% if entity.type == '1' %}Cirduit Itinérant{% else %}Fixe{% endif %}</td>
        </tr>
        {% if entity.cdpc == true %}
        <tr>
            <th>Spécificité</th>
            <td>{{ entity.specificite|raw }}</td>
        </tr>
        {% endif %}
    </tbody>
</table>

<br><br>

        <a class="btn" href="{{ path('cinema') }}"><i class="icon-arrow-left"></i> Revenir à la liste des cinémas</a>     
        <a class="btn" href="{{ path('cinema_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i> Editer</a>
            
<br><br>
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <form action="{{ path('cinema_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit"><i class="icon-remove icon-white"></i> Supprimer {{ entity.nomCinema }}</button>
        </form>
    {% endif %}

<script>
 $("#idcinemas").addClass("active");
    
    
</script> 
{% endblock %}