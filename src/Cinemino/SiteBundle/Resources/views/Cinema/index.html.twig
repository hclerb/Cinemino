
{% extends "CineminoSiteBundle::layout.html.twig" %}

{% block content %}
{% if is_granted('ROLE_SUPER_ADMIN') %}
   <td><a class="btn btn-info" href="{{ path('cinema_new') }}"><i class="icon-white icon-plus"></i> Ajouter un cinéma</a></td>
{% endif %}
 <br/><br/>
 <table class="table table-bordered table-striped table-hover" style="border-collapse: collapse;">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Photo</th>
            <th>Logo</th>
            <th>Site web</th>
            <th>Salle</th>
            <th>Programmateur</th>
            <th>Actions</th>
        </tr>
    </thead>

    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('cinema_show', { 'id': entity.id }) }}">{{ entity.nomCinema }}</a></td>
            <td><img class="img-polaroid" src="{{asset('medias/Cinema/photo/small/')}}{{ entity.photo }}" alt=""/></td>
            <td><img class="img-polaroid" src="{{asset('medias/Cinema/logo/small/')}}{{ entity.logo }}" alt=""/></td>
            <td><a href="{{ entity.siteWeb }}" target="_blank">{{ entity.siteWeb }}</a></td>
            <td>  {% if entity.type == '0' %}Fixe {% else %}Circuit Itinérant{% endif %}</td>
            <td>{{ entity.idCompte }}</td>
            <td>
            
                    <a class="btn btn-info" href="{{ path('cinema_show', { 'id': entity.id }) }}"><i class="icon-white icon-info-sign"></i> Voir</a>
                    <a class="btn btn-info" href="{{ path('cinema_edit', { 'id': entity.id }) }}"><i class="icon-white icon-pencil"></i> Editer</a>
            </td>
        </tr>
    {% endfor %}
 
</table>
<script>
 $("#idcinemas").addClass("active");
    
    
</script>   
{% endblock %}