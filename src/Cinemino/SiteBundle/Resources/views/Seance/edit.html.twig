
{% extends "CineminoSiteBundle::seancelayout.html.twig" %}
{% set mois = [' ','janvier','février','mars','avril','mai','juin','juillet','août','septembre','octobre','novembre','décembre'] %}
{% set lejour = ['Dimanche','Lundi', 'Mardi','Mercredi','Jeudi','Vendredi','Samedi'] %}
{% block title %}
{{ parent() }} - Séances
{% endblock %}

{% block formulaire %}

<div id="formulaire" class="well" style="width:800px">
<div class="page-header"><h3>Modifier séance du {{ lejour[entity.dateSeance|date('w')] }} {{ entity.dateSeance|date('d') }} {{ mois[entity.dateSeance|date('n')] }} {{ entity.dateSeance|date('Y') }} à {{ entity.dateSeance|date('H:i') }}</h3>


{% for key, flash in app.session.getFlashes() %}
    <div class="alert alert-success">
        {{ flash|trans }}
    </div>
{% endfor %}

</div>    
<form action="{{ path('seance_update', { 'id': entity.id }) }}#formulaire" method="post" {{ form_enctype(edit_form) }}>
  <div id="datetimepicker1" class="input-append date">
      {{ form_label(edit_form.dateSeance) }}
      {{ form_errors(edit_form.dateSeance) }}
      {{ form_widget(edit_form.dateSeance) }}
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
      </span>
  </div>
    {{ form_widget(edit_form) }}
        
     <br><br>   
    <p>
        <button class="btn btn-primary" type="submit">Enregistrer</button>
        <a class="btn" href="{{ path('seance') }}"><i class="icon-ban-circle"></i> Annuler</a>
    </p>
</form>


        <form action="{{ path('seance_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
           <button class="btn btn-danger" type="submit">Supprimer la séance</button><i class="icon-remove icon-white"></i>
        </form>
    </li>


</div>    
<script type="text/javascript">
  $(function() {
    $('#datetimepicker1').datetimepicker({
      format :'dd/MM/yyyy hh:mm',
      language: 'fr'
    });
  });
</script> 

{% endblock formulaire %}