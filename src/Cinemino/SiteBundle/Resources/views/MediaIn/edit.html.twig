{% extends "CineminoSiteBundle::layout.html.twig" %}

{% block titre %}Modification : {{ entity.titre }} {% endblock %}


{% block content %}
<div class="well"   >
<form action="{{ path('mediain_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
 <div class="row">
     <div class="span6">
      {{ form_label(edit_form.titre) }}
      {{ form_errors(edit_form.titre) }}
      {{ form_widget(edit_form.titre) }}
     </div>
    <div class="span5">
      {{ form_label(edit_form.type) }}
      {{ form_errors(edit_form.type) }}
      {{ form_widget(edit_form.type) }} 
    </div>
 </div>
 <img class="img-polaroid" src="{{asset('medias/In/photos/big/')}}{{ entity.url }}" alt=""/>
 <div class="row">
    <div class="span5">
     <div id="datetimepicker1" class="input-append date">
      {{ form_label(edit_form.dateDebut) }}
      {{ form_errors(edit_form.dateDebut) }}
      {{ form_widget(edit_form.dateDebut) }}
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
      </span>
     </div>
   </div>
   <div class="span5">       
     <div id="datetimepicker2" class="input-append date">
      {{ form_label(edit_form.dateFin) }}
      {{ form_errors(edit_form.dateFin) }}
      {{ form_widget(edit_form.dateFin) }}
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
      </span>
     </div>
   </div>
</div>
  <br/>
    {{ form_widget(edit_form) }}
 
        <br/>
  <div class="row"> 
      <div class="span3">
        <button class="btn btn-primary" type="submit">Enregistrer</button>
        <a class="btn" href="{{ path('mediain') }}"><i class="icon-ban-circle"></i> Annuler</a>
      </div>
        <div class="span5">        
      <form action="{{ path('mediain_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
          <button class="btn btn-danger" type="submit"><i class="icon-remove icon-white"></i> Supprimer {{ entity.titre }}</button>
        </form>
       </div>
  </div>
</form>

</div>
</div>
<script type="text/javascript">
  $(function() {
    $('#datetimepicker1').datetimepicker({
      language: 'FR',
      format :'dd/MM/yyyy',
      pickTime: false,
    });
    $('#datetimepicker2').datetimepicker({
      language: 'FR',
      format :'dd/MM/yyyy',
      pickTime: false
    });
    

 $("#idmedias").addClass("active");

});
</script>

{% endblock %}

  
        
      