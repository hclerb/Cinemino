
{% extends "CineminoSiteBundle::layout.html.twig" %}
{% block title %}
{{ parent() }}
{% endblock %}

{% block alert %}Gerez vos séances, vous pouvez rechercher et ajouter un film ( les informations sont récupéreés depuis allociné )
 , ainsi que créer et attacher un évènement.
<br> 

{% endblock %}

{% block titre %}Liste des séances{% endblock %}


{% block content %}

<a class="btn btn-info" href="{{ path('seance_new') }}#formulaire"><i class="icon-white icon-plus"></i> Créer une séance</a>
<br><br>

{% for cin in cinemas %}

<table class="table table-bordered table-striped table-hover">
   <h3><a href="{{ path('cinema_show', { 'id': cin.getId() }) }}">{{ cin.nomCinema}}</a></h3>
    <thead>
        <tr bgcolor="#F6FFA3">
            <th width='100px'>Date de la séance</th>
            <th width='50px'>Heure</th>
            <th width='300px'>Film</th>
            <th width='50px'>Version</th>
            <th width='30px'>Type</th>
            <th width='30px'>Avant premiere</th>
            <th width='30px'>Sortie nationale</th>
            <th width='100px'>Evènement</th>
            <th width='160px'>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
       {% if entity.idCinema == cin %}     
          <tr bgcolor="white">
            <td><a href="{{ path('seance_show', { 'id': entity.id }) }}#formulaire">{{ entity.dateSeance|date("d/m/Y") }}</a></td>
            <td>{{ entity.dateSeance|date("H:i") }}</td>
            <td>{{ entity.idFilm.titreFilm }} Réalisé par {{ entity.idFilm.realisateur }}</td>           
            <td>{{ entity.version }}</td>
            <td>{{ entity.type }}</td>
            <td>{% if entity.avantPremiere == 'o' %}Oui{% else %}Non{% endif %}</td>
            <td>{% if entity.sortieNationale == 'o' %}Oui{% else %}Non{% endif %}</td>
            <td>{% if entity.idEvenement %}{{ entity.idEvenement }}{% endif %}</td>
            <td>    
                <a class="btn" href="{{ path('seance_show', { 'id': entity.id }) }}#formulaire"><i class="icon icon-search"></i> Info</a>
                <a class="btn btn-info" href="{{ path('seance_edit', { 'id': entity.id }) }}#formulaire"><i class="icon-white icon-pencil"></i> Editer</a>
            </td>
          </tr>
        {% endif %}
    {% endfor %}
    </tbody>
</table>
     
{% endfor %}


<br><br><br>


 

{% block formulaire %}

{% endblock formulaire %}



{% endblock content %}