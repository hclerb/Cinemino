{% block titre %}Modification : {{ entity}} {% endblock %}


{% block content %}
<div class="well" style="width:800px">
<form action="{{ path('evenement_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
     {{ tinymce_init() }}
    {{ form_widget(edit_form) }}
 
        <br><br>
        
      <button class="btn btn-primary" type="submit">Enregistrer</button>
      <a class="btn" href="{{ path('evenement') }}"><i class="icon-ban-circle"></i> Annuler</a>

</form>

        <form action="{{ path('evenement_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
          <button class="btn btn-danger" type="submit">Supprimer {{ entity }}</button><i class="icon-remove icon-white"></i>
        </form>
</div>
