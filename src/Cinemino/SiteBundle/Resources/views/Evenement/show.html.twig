{% extends "CineminoSiteBundle::layout.html.twig" %}
{% block title %}
{{ parent() }}
{% endblock %}

{% block alert %}Gérer les évènements lié aux séances.
{% endblock alert %}

{% block titre %}{{ entity }}{% endblock %}


{% block content %}


<table class="record_properties">
    <tbody>
        <tr>
            <th>Titre évenement :</th>
            <td>{{ entity.titreEvenement }}</td>
        </tr>
        <tr>
            <th>Description évènement :</th>
            <td>{{ entity.descriptionEvenement }}</td>
        </tr>
        <tr>
            <th>Date évenement :</th>
            <td>{{ entity.dateEvenement|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Date fin :</th>
            <td>{{ entity.dateFin|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Priorite :</th>
            <td>{{ entity.priorite }}</td>
        </tr>
    </tbody>
</table>
<br><br>
<h5>A ajouter : info sur la ou les séances en relations, intervenants en relation ....</h5>
<br><br><br>
    
<a class="btn btn-info" href="{{ path('evenement_edit', { 'id': entity.id }) }}"><i class="icon-white icon-pencil"></i> Editer</a>
<a class="btn" href="{{ path('evenement') }}"><i class="icon-arrow-left"></i> Revenir a la liste</a>

<br><br>

{% endblock %}