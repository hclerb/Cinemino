
{% extends "CineminoSiteBundle::layout.html.twig" %}

{% block titre %}{{ entity.titre }}{% endblock %}


{% block content %}

<table class="table table-bordered table-striped table-hover">
    <tbody>
        <tr>
            <th>Titre: </th>
            <td>{{ entity.titre }}</td>
        </tr>
        <tr>
            <th>Url: </th>
            <td>{{ entity.url|raw }}</td>
        </tr>
        <tr>
            <th>Type: </th>
            <td>{% if entity.type == 'p' %}Photo{% else %}Video{% endif %}</td>
        </tr>
    </tbody>
</table>
{% if entity.type == 'p' %}
<br><img class="img-polaroid" width="450" src="{{asset('medias/Film/photos/big/')}}{{ entity.url }}" alt=""/>
{% endif %}

<br><br>

      <a class="btn" href="{{ path('media') }}"><i class="icon-arrow-left"></i> Revenir a la liste</a>
      <a class="btn btn-info" href="{{ path('mediaFilm_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i> Editer</a>

<script>
 $("#idmedias").addClass("active");
 </script>
{% endblock content %}