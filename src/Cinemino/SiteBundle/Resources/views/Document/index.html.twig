{% extends "CineminoSiteBundle::layout.html.twig" %}

{% block content %}

<a class="btn btn-info" href="{{ path('document_new') }}"><i class="icon-white icon-plus"></i> Ajouter un document</a>
<br><br>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Descriptif</th>
            <th width="160px">Urlfichier</th>
            <th width="160px">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('document_show', { 'id': entity.id }) }}">{{ entity.nomDocument }}</a></td>
            <td>{{ entity.descriptifDocument|raw }}</td>
            <td>{{ entity.urlFichier }}</td>
            <td>
                <a class="btn" href="{{ path('document_show', { 'id': entity.id }) }}"><i class="icon icon-search"></i> Info</a>
                <a class="btn btn-info" href="{{ path('document_edit', { 'id': entity.id }) }}"><i class="icon-white icon-pencil"></i> Editer</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock content %}